/*按钮样式开始*/
.action_block{
  margin-top:80rpx;
}
.border_top{
  border-top: 1px solid #eee;
}
.border_bottom{
  border-bottom: 1px solid #eee;
}
.action_block .action_box{
  background: #fff;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding:20rpx 10rpx 20rpx 20rpx;
}
.action_block .action_box text{
  font-size: 35rpx;
}
.action_block .action_box image{
  width: 50rpx;
  height: 50rpx;
}
/*按钮样式结束*/



/*没有数据*/
.noData{
  width: 100%;
  text-align: center;
  margin-top: 100rpx;
  height: 200rpx;
}
.noData image{
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto;
}
.noData text{
  font-size: 30rpx;
  color:#888;
}

/*加载中*/
.loading{
  width: 100%;
  text-align: center;
}
.loading text{
  font-size: 30rpx;
  color:#444;
}