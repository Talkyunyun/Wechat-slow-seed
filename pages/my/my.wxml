<scroll-view>
  <view class="user_info">
      <view class="user_img">
        <image src="{{user.avatarUrl}}"></image>
      </view>
      <text class="user_name">{{user.nickName}}</text>
  </view>

  <!-- 操作列表 -->
  <view class="action_block">
    <view class="action_box border_top" bindtap="openCollection">
      <text>我的收藏</text>
      <image src="{{arrow.right}}"></image>
    </view>
    <view class="action_box border_top border_bottom" bindtap="openFeedback">
      <text>意见反馈</text>
      <image src="{{arrow.right}}"></image>
    </view>
  </view>
</scroll-view>