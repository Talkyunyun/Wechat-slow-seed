<scroll-view>
  	<view class="user_main">
		<view class="face_box">
			<image src="{{user.avatar_url}}"></image>
		</view>

		<text class="user_name">{{user.nick_name}}</text>
 	 </view>


  	<!-- 操作列表 -->
  	<view class="action_block">
		<view class="action_box border_top" bindtap="openCollection">
			<text>我的收藏</text>
			<image src="../../images/icon/arrow_right.png"></image>
		</view>

		<view class="action_box border_top border_bottom" bindtap="openFeedback">
			<text>意见反馈</text>
			<image src="../../images/icon/arrow_right.png"></image>
		</view>
  	</view>
</scroll-view>